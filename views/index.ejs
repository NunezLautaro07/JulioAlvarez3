<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./cssaw/fontawesome.min.css">
    <link rel="stylesheet" href="./cssaw/solid.css">
    <link rel="stylesheet" href="./css/style.css">
    <style>
.imagen-podcast {
    width: 100%;
    border-radius: 7px;
}
a {
    color: inherit;
}
.hola {
    background-color: aqua;
}
.estatico-sidebar {
    position: relative;
}
.margen {
    margin: 0;
}
.negro {
    color: black;
}
.margen-arriba-nav {
    margin-top: 0px;
}
.margen-arriba-nav-sidebar {
    margin-top: 22px;
    margin-left: -2%;
}
.margen-arriba-nav-form {
    margin-top: 0px;
    text-align: center;
    margin-left: 3.9%;
}
@media (max-width: 768px) {
    .margen-arriba-nav-sidebar {
        display: none;
    }
}
@media (max-width: 992px) {
    .margen-arriba-nav-form {
        margin-right: 20%;
        margin-left: 20%;
    }
}
@media (min-width: 995px) {
    .estatico-sidebar {
        position: fixed;
    }
    .margen-arriba-nav {
        margin-top: 80px;
    }
    .margen-arriba-nav-sidebar {
        margin-top: 80px;
    }
    .margen-arriba-nav-form {
        margin-top: 88px;
        margin-right: 4%;
    }
}
@media (min-width: 1600px) {
    .margen-arriba-nav-form {
        margin-right: 0%;
        margin-left: 6%;
    }
}
.margen-pdf {
    margin-right: 5px;
}

    </style>
    <title>Fisica</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar bg-body-tertiary estatico-sidebar">
                <div class="container-fluid">
                    <button class="navbar-brand btn fs-4 my-1" >Fisica Moderna en 1 minuto</button>
                    <span class='d-flex'>
                        <i class="fa-solid fa-moon fa-2xl"></i>
                    </span>
                </div>
            </nav>
        </div>

        <div class="container my-1">
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-3 col-sm-12">
                    <div class="estatico-sidebar margen-arriba-nav-sidebar">
                        <p class='text-center fw-bold'>Temas</p>
                        <hr />
                        <ul class="list-unstyled">
                            <% const uniqueTopics = [...new Set(podcasts.map(podcast => podcast.tema))]; %>
                            <% uniqueTopics.forEach(topic => { %>
                            <li class="mb-1">
                                <button class="btn border-0 text-start" onclick="filterPodcasts('<%= topic %>')">
                                    <%= topic %>
                                </button>
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>

                <div class="col-xl-7 col-lg-7 col-md-9 col-12">
                    <div class="margen-arriba-nav container-fluid" id="podcast-container">
                        <% podcasts.forEach(podcast => { %>
                        <div class="podcast-item" data-tema="<%= podcast.tema %>">
                            <hr class="mb-4" />
                            <div class="row g-2">
                                <div class="col-xl-3 col-lg-4 col-md-4 col-sm-4">
                                    <img src="fisica3.jpg" class="imagen-podcast" alt="podcast" />
                                </div>
                                <div class="col-xl-9 col-lg-8 col-md-8 col-sm-8">
                                    <div>
                                        <span class="fw-bold"><%= podcast.nombre %></span>
                                        <br /><%= podcast.descripcion %>
                                        <br />
                                        <div class="mt-2">
                                            <a href="fisicamodernapdf.pdf" download class="fa fa-file-pdf margen-pdf"></a>
                                            <i class="fa fa-play-circle ml-1" id="audio_fa"></i>
                                            <audio src="fisica1.mp3" type="audio/mpeg" id="audio_podcast_id"></audio>
                                            <p class="d-inline disabled small blockquote-footer">
                                                Duration in seconds
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12">
                    <div class="estatico-sidebar margen-arriba-nav-form">
                        <div class="w-100 justify-content-center">
                            <form action="https://formspree.io/f/moqgzenz" method="post">
                                <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                                <input type="text" class="form-control" name="Nombre" placeholder="" />
                                <div class="mb-3">
                                    <label for="exampleFormControlTextarea1" class="form-label">Pregunta</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" name="Pregunta" rows="3"></textarea>
                                </div>
                                <input type="submit" value="Enviar" class="btn" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function filterPodcasts(topic) {
            const podcastItems = document.querySelectorAll('.podcast-item');
            podcastItems.forEach(item => {
                if (item.getAttribute('data-tema') === topic) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
